<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		tools:context=".GeoFence">

	<GridLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
			app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
			android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
			android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintVertical_bias="0.043">

		<EditText
				android:id="@+id/G_Lat"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:hint="Latitude"
				android:autofillHints="Latitude"
				android:layout_column="0" android:layout_row="0"
				android:inputType="numberDecimal"
		/>

		<EditText
				android:id="@+id/G_Long"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:hint="Longitude"
				android:autofillHints="Longitude"
				android:layout_row="1" android:layout_column="0"
				android:inputType="numberDecimal"
		/>

		<EditText
				android:id="@+id/G_Rad"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:hint="Radius"
				android:autofillHints="Radius"
				android:layout_row="2" android:layout_column="0"
				android:inputType="numberDecimal"
		/>

		<RadioButton
				android:id="@+id/Silent"
				android:layout_column="0" android:layout_row="4"
				android:text="Silent"
		/>

		<RadioButton
				android:id="@+id/Max_Vol"
				android:layout_column="0" android:layout_row="5"
				android:text="Max Volume"
		/>

		<Button
				android:id="@+id/Add_GeoFence"
				android:layout_column="0" android:layout_row="6"
				android:text="Add GeoFence"
		/>

	</GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
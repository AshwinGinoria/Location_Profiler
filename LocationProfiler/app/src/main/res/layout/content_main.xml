<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		app:layout_behavior="@string/appbar_scrolling_view_behavior"
		tools:showIn="@layout/activity_main"
		tools:context=".MainActivity">
	<Button
			android:id="@+id/ChangeVol"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Change Volume"
			app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
			app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
			android:layout_marginTop="224dp" app:layout_constraintTop_toTopOf="parent"
			android:onClick="gotoVolumeActivity"
	/>

	<Button
			android:id="@+id/SetLoc"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Set Location"
			android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/ChangeVol"
			app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
			app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
			app:layout_constraintHorizontal_bias="0.498"
			android:onClick="gotoLocationActivity"
	/>

	<Button
			android:id="@+id/GeoFence"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Add Geofence"
			android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/SetLoc"
			app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
			app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
			android:onClick="gotoGeoFenceActivity"
			app:layout_constraintHorizontal_bias="0.507"/>

</androidx.constraintlayout.widget.ConstraintLayout>
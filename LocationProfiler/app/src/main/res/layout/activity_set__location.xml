<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		tools:context=".Set_Location">

	<fragment
			android:layout_width="match_parent"
			android:layout_height="500dp"
			android:id="@+id/map"
			tools:context=".MapsActivity"
			android:name="com.google.android.gms.maps.SupportMapFragment" android:layout_marginTop="8dp"
			app:layout_constraintTop_toTopOf="parent"/>

	<Button
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:text="Add GeoFence"
			android:id="@+id/AddLoc"
			app:layout_constraintEnd_toEndOf="parent"
			android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
			android:layout_marginStart="8dp"
			android:layout_marginBottom="8dp"
			app:layout_constraintBottom_toBottomOf="parent"
			android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/Latitudee"
			app:layout_constraintVertical_bias="0.0"/>

	<TextView
			android:layout_width="wrap_content"
			android:layout_height="21dp"
			android:text="Latitude"
			app:layout_constraintEnd_toEndOf="parent"
			android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
			android:layout_marginStart="8dp" android:id="@+id/Latitudee"
			app:layout_constraintTop_toBottomOf="@+id/Longitudee" android:layout_marginTop="4dp"/>
	<TextView
			android:layout_width="wrap_content"
			android:layout_height="21dp"
			android:text="Longitude"
			app:layout_constraintEnd_toEndOf="parent"
			android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
			android:layout_marginStart="8dp" android:id="@+id/Longitudee"
			app:layout_constraintHorizontal_bias="0.498" android:layout_marginTop="36dp"
			app:layout_constraintTop_toBottomOf="@+id/map"/>

</androidx.constraintlayout.widget.ConstraintLayout>